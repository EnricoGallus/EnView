<% content_for :title, t("#{prefix}.content_title") %>

<div class="w-full mx-auto">
  <div class="flex justify-between items-center gap-2">
    <h1 class="font-bold text-4xl"><%= t("#{prefix}.title") %></h1>
    <% if headers.any? %>
      <% headers.each do |element| %>
        <%= element %>
      <% end %>
    <% end %>
  </div>

  <%= body %>

  <% if footers.any? %>
    <% footers.each do |element| %>
      <%= element %>
    <% end %>
  <% end %>
</div>